{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "lib": ["ES6", "DOM", "DOM.Iterable"],
    "outDir": "./src/scripts",
    "rootDir": "./src/scripts",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "types": []
  },
  "include": ["src/scripts/**/*.ts"],
  "exclude": ["node_modules", "src/scripts/**/*.js"]
}
